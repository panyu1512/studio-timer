---
import Layout from '../layouts/Layout.astro';


---

<Layout title="⏳ Studio Timer ⏳">
	<main class="flex h-screen">
		<div class="m-auto justify-center text-center">
			<h1 class="text-4xl mb-20">⏳ Studio Timer ⏳</h1>
			<div
				class="w-96 h-96 bg-white rounded-full border-4 border-gray-200 flex items-center justify-center"
			>
				<div class="flex flex-col items-center">
					<h1 class="text-6xl font-bold">00:00</h1>
					<p class="text-gray-500">Time Elapsed</p>
				</div>
			</div>
			<button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-10 mb-10">
				Start Timer
			</button>
		</div>
	</main>
</Layout>
